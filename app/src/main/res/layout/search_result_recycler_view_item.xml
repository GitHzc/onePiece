<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tool="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">


    <RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginStart="10dp"
    android:layout_marginEnd="10dp"
    android:paddingTop="10dp"
    android:paddingBottom="10dp">

        <com.example.onepiece.myWidget.MarqueeTextView
            android:id="@+id/search_result_fragment_item_title"
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            android:layout_toEndOf="@id/song_num_container"
            android:layout_centerVertical="true"
            android:textSize="18sp"
            android:singleLine="true"
            android:focusable="true"
            android:marqueeRepeatLimit="marquee_forever"
            android:ellipsize="marquee"
            tool:text="hacking to the gate stei" />


        <ImageView
            android:id="@+id/search_result_fragment_item_token"
            android:layout_width="23dp"
            android:layout_height="23dp"
            tool:src="@drawable/play"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:layout_marginEnd="15dp"
            android:padding="3dp"
            android:src="@drawable/play"/>

    </RelativeLayout>

    <View
    android:layout_width="match_parent"
    android:layout_height="0.5dp"
    android:background="#dcdcdc" />

</LinearLayout>
