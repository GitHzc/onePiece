<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tool="http://schemas.android.com/tools"

    android:orientation="horizontal">

    <LinearLayout
        android:paddingTop="5dp"
        android:paddingBottom="5dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp">

        <RelativeLayout
            android:id="@+id/songlist_relative_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/songlist_picture"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:scaleType="fitXY"
                android:layout_marginEnd="10dp"
                android:layout_centerVertical="true"
                tool:src="@mipmap/umeng_socialize_share_music"/>

            <TextView
                android:id="@+id/songlist_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toEndOf="@id/songlist_picture"
                android:textSize="20sp"
                tool:text="本地音乐"/>

            <ImageView
                android:id="@+id/songlist_more"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true"
                app:srcCompat="@drawable/baseline_more_horiz_24" />

            <TextView
                android:id="@+id/number_of_songs"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignStart="@id/songlist_title"
                android:layout_below="@id/songlist_title"
                tool:text="15首"/>

        </RelativeLayout>

    </LinearLayout>

</LinearLayout>
