<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tool="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:foreground="?android:attr/selectableItemBackground"
    app:cardCornerRadius="5dp"
    app:cardElevation="8dp">

    <LinearLayout
        android:id="@+id/discovery_fragment_recycler_view_item_background"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="5dp">

        <TextView
            android:id="@+id/discovery_fragment_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tool:text="k歌之王"
            android:textSize="18sp"
            android:layout_gravity="center_horizontal"/>

        <TextView
            android:id="@+id/discovery_fragment_artist"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tool:text="陈奕迅"
            android:textSize="16sp"
            android:layout_gravity="center_horizontal"/>

        <TextView
            android:id="@+id/discovery_fragment_comment"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:layout_marginBottom="20dp"
            tool:text="666"
            android:textSize="20sp"
            android:layout_gravity="center_horizontal|center_vertical"
            android:gravity="center_vertical|center_horizontal"/>

        <TextView
            android:id="@+id/discovery_fragment_author"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tool:text="某某"
            android:textSize="16sp"
            android:layout_gravity="end"/>

        <TextView
            android:id="@+id/discovery_fragment_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tool:text="2018-07-09"
            android:textSize="16sp"
            android:layout_gravity="end"/>

        </LinearLayout>

</android.support.v7.widget.CardView>

